<div class="panel panel-primary form-panel">
  <div class="panel-heading form-panel-heading">
    <h3 class="panel-title">Restaurants</h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Address</th>
          <th>City</th>
          <th>Country</th>
          <th>Zip</th>
          <% if current_user %>
            <th>Orders</th>
          <% end %>
          <th colspan="3"></th>          
        </tr>
      </thead>

      <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.category %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.city %></td>
            <td><%= restaurant.country %></td>
            <td><%= restaurant.zip %></td>
            <% if current_user %>
              <td><%= link_to "Orders", "#{orders_url}?restaurant=#{restaurant.id}" %></td>
            <% end %>
            <td>
              <%= link_to 'Show', restaurant %> 
              <%= link_to 'Edit', edit_restaurant_path(restaurant) if current_user %> 
              <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } if current_user %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'New Restaurant', new_restaurant_path, class: 'pull-right' if current_user %>
