<div class="row">
	<div class="col-md-3"></div>
  <div class="col-md-6">
  	<div class="panel panel-primary form-panel">
      <div class="panel-heading form-panel-heading">
        <h3 class="panel-title">Register Your Restaurant</h3>
      </div>
      <div class="panel-body">    
				<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
					<% if devise_error_messages!.present? %>
					<div class="alert alert-warning alert-dismissible" role="alert">
					  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
					  <%= devise_error_messages! %>
					</div>
				  <% end %>

				  <%= f.input :name, label: "Restaurant Name" %>
				  <%= f.input :email %>
				  <%= f.input :password, hint: false %>
				  <%= f.input :password_confirmation, hint: false %>
				  <%= f.input :phone %>
				  <%= f.input :website %>
				  <%= f.association :categories, collection: Category.all, input_html: {multiple: true, class: "chosen-select"} %>
				  
				  <%= f.input :address %>
				  <%= f.input :city%>
				  <%= f.input :state, collection: us_states, include_blank: false %>
				  <%= f.input :zip %>
				  <%= f.submit "Sign Up" %>
				<% end %>
			</div>
		<div class="panel-footer" style="text-align: center">
			<%= render "devise/shared/links" %>
		</div>
	</div>
	</div>
  <div class="col-md-3"></div>
</div>